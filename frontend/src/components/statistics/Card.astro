---
import { Icon } from "astro-icon/components";

const { title, quantity, icon } = Astro.props;
---

<div
  class="flex flex-col items-center bg-white/30 p-2 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300"
>
  <Icon name={icon} class="text-3xl" />
  <p class="stat-quantity">{quantity}</p>
  <p class="text-center text-sm sm:text-xs md:text-sm text-balance">{title}</p>
</div>
